[flake8]
max-line-length = 127
max-complexity = 10
extend-ignore = E203,W503,E501,W504

exclude = 
    .git,
    __pycache__,
    .venv,
    .env,
    venv,
    ENV,
    env,
    .tox,
    .coverage,
    .coverage.*,
    .cache,
    nosetests.xml,
    coverage.xml,
    *.cover,
    *.py,cover
    .hypothesis,
    .pytest_cache,
    migrations,
    node_modules,
    static,
    htmlcov

per-file-ignores =
    __init__.py:F401
    conftest.py:F401
    app.py:E402

select = E,W,F,C

enable-extensions = F401,F841,C901

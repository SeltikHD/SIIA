# Dockerfile específico para desenvolvimento mobile
FROM python:3.11-slim

WORKDIR /app

# Instala dependências do sistema necessárias para Kivy e desenvolvimento
RUN apt-get update && apt-get install -y \
    build-essential \
    libgl1-mesa-dev \
    libgles2-mesa-dev \
    libgstreamer1.0-dev \
    gstreamer1.0-plugins-base \
    gstreamer1.0-plugins-good \
    gstreamer1.0-plugins-bad \
    gstreamer1.0-plugins-ugly \
    gstreamer1.0-libav \
    libsdl2-dev \
    libsdl2-image-dev \
    libsdl2-mixer-dev \
    libsdl2-ttf-dev \
    libportmidi-dev \
    libswscale-dev \
    libavformat-dev \
    libavcodec-dev \
    zlib1g-dev \
    libfreetype6-dev \
    xvfb \
    x11-utils \
    git \
    && rm -rf /var/lib/apt/lists/*

# Instala Kivy e dependências de desenvolvimento
RUN pip install --no-cache-dir kivy[base] kivymd requests debugpy

# Copia o código da aplicação
COPY . .

# Expõe portas
EXPOSE 8080 5679

# Define variáveis de ambiente para desenvolvimento
ENV KIVY_WINDOW=sdl2
ENV KIVY_GL_BACKEND=gl
ENV KIVY_LOG_LEVEL=debug
ENV DISPLAY=:99

# Script de inicialização para desenvolvimento
COPY docker-entrypoint-dev.sh /docker-entrypoint-dev.sh
RUN chmod +x /docker-entrypoint-dev.sh

ENTRYPOINT ["/docker-entrypoint-dev.sh"]
CMD ["python", "main.py"]
